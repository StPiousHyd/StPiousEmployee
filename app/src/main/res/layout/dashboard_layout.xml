<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/llAttendence"
                android:layout_width="@dimen/_146sdp"
                android:layout_height="@dimen/_150dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:background="@drawable/ic_online_bg"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/report" />


                <stpious.employee.utills.customFonts.Text_Bold
                    android:id="@+id/tvOnlineCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Attendence"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFeePay"
                android:layout_width="@dimen/_146sdp"
                android:layout_height="@dimen/_150dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_clinic_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">


                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/payment2" />

                <stpious.employee.utills.customFonts.Text_Bold
                    android:id="@+id/tvClinicCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Fee Payments"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/llExamCell"
                android:layout_width="@dimen/_146sdp"
                android:layout_height="@dimen/_150dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:background="@drawable/ic_emergency_bg"
                android:gravity="center"
                android:orientation="vertical"

                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/exam" />


                <stpious.employee.utills.customFonts.Text_Bold
                    android:id="@+id/tvEmergencyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Exam Cell"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLearning"
                android:layout_width="@dimen/_146sdp"
                android:layout_height="@dimen/_150dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_pending_dash_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="onClick"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/books_learn" />

                <stpious.employee.utills.customFonts.Text_Bold
                    android:id="@+id/tvPendingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Learning"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
